<h1>Yollo</h1>
<p>Create New Person Here</p>

<%= form_for :person, url: people_path do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
 
  <p>
    <%= f.label :address %><br>
    <%= f.text_area :address %>
  </p>
 
  <p>
    <%= f.label :telephone %><br>
    <%= f.text_field :telephone %>
  </p>

  </p>
  <%= f.label :groupname %>
  <%= f.collection_select(:group_id, Group.all, :id, :groupname) %>
  </p>

  <p>
    <%= f.submit %>
  </p>

<% end %>